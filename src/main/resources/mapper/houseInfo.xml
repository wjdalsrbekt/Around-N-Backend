<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ssafy.happyhouse.model.mapper.HouseInfoMapper">

	<!-- 전체 집 정보 조회 -->
	<select id="list"
		resultType="com.ssafy.happyhouse.model.HouseInfoDto">
		select no,dong,AptName,code,buildYear,jibun,lat,lng,img
		from
		houseinfo
		<if test="word!=null or word!='' ">
			<if test="key=='dong'">
				where dong = #{dong}
			</if>				<if test="key=='AptName'">
				where AptName like concat('%',#{word},'%')
			</if>
		</if>
		order by no desc
	</select>



	<!-- 집 정보 등록 -->
	<insert id="create"
		parameterType="com.ssafy.happyhouse.model.HouseInfoDto">
		insert into houseinfo(
		no,dong,AptName,code,buildYear,jibun,lat,lng,img
		) values (
		#{no},#{dong},#{AptName},#{code},#{buildYear},#{jibun},#{lat},#{lng},#{img}
		)
	</insert>

	<!-- 집 정보 수정 -->
	<update id="modify"
		parameterType="com.ssafy.happyhouse.model.HouseInfoDto">
		<![CDATA[
		update houseinfo
		set dong=#{dong},
			AptName=#{AptName},
			buildYear=#{buildYear},
			code=#{code},
			jibun=#{jibun},
			lat=#{lat},
			lng=#{lng},
			img=#{img}
		where no=#{no}
		]]>
	</update>

	<!-- 집 정보 삭제 -->
	<delete id="delete" parameterType="int">
		delete
		from houseinfo
		where
		no=#{no}
	</delete>

</mapper>  